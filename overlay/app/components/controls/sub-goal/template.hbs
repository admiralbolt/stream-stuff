<div local-class="sub-wrapper">
  <BsForm @formLayout="vertical" @model={{this}} as |form|>
    <form.element @controlType="text" @label="Sub Goal Message" @property="goalMessage" />
    <form.element @controlType="text" @label="Plugin Mode" @property="mode" />
    <form.element @controlType="number" @label="Sub Goal" @property="subGoal" />
    <br><br>
    <BsButton @type="primary" @onClick={{action "updateInfo"}}>Update Info</BsButton>
  </BsForm>
</div>
